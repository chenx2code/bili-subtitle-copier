{
  "manifest_version": 3,
  "name": "Bilibili 字幕复制器 (SRT)",
  "version": "1.0",
  "description": "在 AI 小助手字幕列表面板添加按钮，一键复制 SRT 格式字幕。",
  "permissions": [
    "clipboardWrite" 
  ],
  "content_scripts": [
    {
      "matches": ["*://*.bilibili.com/video/*"],
      "js": ["content.js"],                    
      "css": ["style.css"]                    
    }
  ],
  "icons": {                                  
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
   },
  "web_accessible_resources": [               
    {
      "resources": ["icons/*.png"],
      "matches": ["*://*.bilibili.com/*"]
    }
  ]
}